<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="ap-local-base-url" content="{{localBaseUrl}}">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/public/primer/build.css" media="all" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  </head>
  <body class="bg-gray px-3 py-6">
    <section class="mx-auto" style="max-width: 510px">
      <h2 class="f2 text-center text-normal">Connect an organization</h2>
      <p class="text-gray text-center mb-4">Which organization do you want to connect to?</p>

      <div class="Box box-shadow">
        <div class="">
          {{#each installations}}
            <a href="{{ account.login }}" data-installation-id="{{ id }}" class="install-link Box-row Box-row--hover-gray muted-link d-block clearfix">
              <img class="avatar float-left mr-2" src="{{ account.avatar_url }}" alt="" height="20" width="20">
              <span class="text-bold text-gray-dark">{{ account.login }}</span>
            </a>
          {{/each}}
        </div>
      </div>

      <p class="text-gray text-center my-4">
        Don't see your organization?
        <a href="{{ info.html_url }}/installations/new">Install {{ info.name }}</a>.
      </p>
    </section>
    <script>
      $('.install-link').click(function (event) {
        event.preventDefault();

        $.post('/github/configuration', {
          installationId: $(event.target).data('installation-id')
        }, function (data) {
          window.close()
        });
      });
    </script>
  </body>
</html>
